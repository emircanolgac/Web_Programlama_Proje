@using EntityLayer.Concreate
@model List<Article>

@{
    ViewData["Title"] = "ArticleListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Makaleleri</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Makale Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ArticleId</td>
            <td>@item.ArticleTitle</td>
            <td>@item.ArticleCreateDate</td>
            <td>@item.CategoryID</td>
            <td>@item.ArticleStatus</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-primary"> Yeni Makale Oluştur</a>

