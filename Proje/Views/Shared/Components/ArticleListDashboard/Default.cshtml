@using EntityLayer.Concreate
@model List<Article>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Makale</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ArticleThumbnailImage" class="mr-2" alt="image">
                                    </td>
                                    <td>
                                        @item.ArticleTitle
                                    </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                    </td>
                                    <td> @(((DateTime)item.ArticleCreateDate).ToString("dd-MMM-yyyy")) </td>

                                    <td>
                                        <a href="/Article/ArticleReadAll/@item.ArticleId" class="btn btn-dark">Detaylar</a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>